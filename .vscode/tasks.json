{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "🧹 清理项目",
            "type": "shell",
            "command": "flutter",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "📦 获取依赖",
            "type": "shell",
            "command": "flutter",
            "args": ["pub", "get"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🔧 代码生成",
            "type": "shell",
            "command": "flutter",
            "args": ["packages", "pub", "run", "build_runner", "build", "--delete-conflicting-outputs"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🎨 格式化代码",
            "type": "shell",
            "command": "dart",
            "args": ["format", "lib/"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🔍 代码分析",
            "type": "shell",
            "command": "flutter",
            "args": ["analyze"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🧪 运行测试",
            "type": "shell",
            "command": "flutter",
            "args": ["test"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🔨 构建 APK",
            "type": "shell",
            "command": "flutter",
            "args": ["build", "apk", "--release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🍎 构建 iOS",
            "type": "shell",
            "command": "flutter",
            "args": ["build", "ios", "--release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🌐 构建 Web",
            "type": "shell",
            "command": "flutter",
            "args": ["build", "web", "--release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "🚀 完整构建流程",
            "dependsOrder": "sequence",
            "dependsOn": [
                "🧹 清理项目",
                "📦 获取依赖",
                "🎨 格式化代码",
                "🔍 代码分析"
            ]
        }
    ]
}
